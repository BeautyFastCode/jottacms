{% extends 'frontend/layout.html.twig' %}

{% block title %}{{ page.title }} | {{ parent() }}{% endblock %}

{% block header_content %}
    <section class="header-content">
        <div class="container title">
            <div class="icon">
                <i class="fa-4x {{ page.icon }}"></i>
            </div>
            <div class="content">
                <h1 class="display-4 my-0">{{ page.title }}</h1>
                <div class="text-muted mt-3">{{ page.lead|raw }}</div>
            </div>
        </div>
    </section>
{% endblock %}

{% block main_content %}

    <section class="main-content mb-4 px-4 py-4">
        {% for content in page.contents %}
            {{ content.setCurrentLocale(app.request.locale) }}

            <div>
                <h3>{{ content.title }}</h3>
                <div>
                    {{ content.text|markdown_to_html }}
                </div>
                <hr>
            </div>
        {% endfor %}
    </section>

{% endblock %}
