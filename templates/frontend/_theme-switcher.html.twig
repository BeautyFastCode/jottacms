
<li class="nav-item dropdown">
    <a class="nav-link dropdown-toggle" href="#" id="dropdown-theme" role="button"
       data-bs-toggle="dropdown" aria-expanded="false">
        <i class="fas fa-palette"></i>
        <span class="dropdown-label">{{ 'theme.label'|trans }}:</span>
        <span id="dropdown-label">{{ 'theme.light'|trans }}</span>
    </a>
    <ul class="dropdown-menu" aria-labelledby="dropdown-theme">
        <li>
            <a class="dropdown-item" href="#" id="switch-light-theme">
                {{ 'theme.light'|trans }}
            </a>
        </li>
        <li>
            <a class="dropdown-item" href="#" id="switch-dark-theme">
                {{ 'theme.dark'|trans }}
            </a>
        </li>
    </ul>
</li>

<script>

    if(document.body.classList.contains('theme-light')) {

        document.getElementById('navbar-top').classList.remove('navbar-dark');
        document.getElementById('navbar-top').classList.add('navbar-light');

        document.getElementById('dropdown-label').textContent = trans['theme']['light'];
    } else {

        document.getElementById('navbar-top').classList.remove('navbar-light');
        document.getElementById('navbar-top').classList.add('navbar-dark');

        document.getElementById('dropdown-label').textContent = trans['theme']['dark'];
    }

    document.getElementById('switch-light-theme').addEventListener('click', (event) => {
        event.preventDefault();

        document.body.classList.remove('theme-dark');
        document.body.classList.add('theme-light');

        document.getElementById('navbar-top').classList.remove('navbar-dark');
        document.getElementById('navbar-top').classList.add('navbar-light');

        document.getElementById('dropdown-label').textContent = trans['theme']['light'];

        localStorage.setItem('theme', 'theme-light');
    })

    document.getElementById('switch-dark-theme').addEventListener('click', (event) => {
        event.preventDefault();

        document.body.classList.remove('theme-light');
        document.body.classList.add('theme-dark');

        document.getElementById('navbar-top').classList.remove('navbar-light');
        document.getElementById('navbar-top').classList.add('navbar-dark');

        document.getElementById('dropdown-label').textContent = trans['theme']['dark'];

        localStorage.setItem('theme', 'theme-dark');
    })

</script>
